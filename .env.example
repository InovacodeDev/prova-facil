# Environment variables template
# Copy this file to .env.local and fill in your values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database (for Drizzle)
DATABASE_URL=your_database_url

# Google AI (Genkit) - Get your API key at https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# PostgreSQL Local via Docker
# These credentials match the docker-compose.yml setup
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_db

# Signup redirect URL
NEXT_PUBLIC_SIGNUP_REDIRECT_URL=your_signup_redirect_url

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Stripe Webhook Secret
# Get this from: https://dashboard.stripe.com/webhooks
# For local testing, use Stripe CLI: stripe listen --forward-to localhost:8800/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product IDs
# Create products in Stripe Dashboard and add their IDs here
# Each product should have monthly and/or yearly prices
STRIPE_PRODUCT_STARTER=prod_your_starter_product_id
STRIPE_PRODUCT_STARTER_PRICE_ID_MONTHLY=prod_your_starter_monthly_price_id
STRIPE_PRODUCT_BASIC=prod_your_basic_product_id
STRIPE_PRODUCT_BASIC_PRICE_ID_MONTHLY=prod_your_basic_monthly_price_id
STRIPE_PRODUCT_BASIC_PRICE_ID_ANNUAL=prod_your_basic_annual_price_id
STRIPE_PRODUCT_ESSENTIALS=prod_your_essentials_product_id
STRIPE_PRODUCT_ESSENTIALS_PRICE_ID_MONTHLY=prod_your_essentials_monthly_price_id
STRIPE_PRODUCT_ESSENTIALS_PRICE_ID_ANNUAL=prod_your_essentials_annual_price_id
STRIPE_PRODUCT_PLUS=prod_your_plus_product_id
STRIPE_PRODUCT_PLUS_PRICE_ID_MONTHLY=prod_your_plus_monthly_price_id
STRIPE_PRODUCT_PLUS_PRICE_ID_ANNUAL=prod_your_plus_annual_price_id
STRIPE_PRODUCT_ADVANCED=prod_your_advanced_product_id
STRIPE_PRODUCT_ADVANCED_PRICE_ID_MONTHLY=prod_your_advanced_monthly_price_id
STRIPE_PRODUCT_ADVANCED_PRICE_ID_ANNUAL=prod_your_advanced_annual_price_id

# Redis Configuration (for subscription caching)
# Optional: If not provided, caching will be disabled and all requests will hit Stripe API
# For production, use a managed Redis service (e.g., Redis Cloud, AWS ElastiCache, Upstash)
# For local development, run Redis via Docker: docker run -d -p 6379:6379 redis:alpine
REDIS_URL=redis://localhost:6379
# OR use individual settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

