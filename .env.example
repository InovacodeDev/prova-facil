# ========================================
# CONFIGURAÇÃO LOCAL COM DOCKER COMPOSE
# ========================================
# Este arquivo contém as variáveis para usar com o docker-compose.yml
# Copie para .env.local e ajuste se necessário

# Supabase (se usar Supabase, mantenha suas credenciais)
# Para desenvolvimento local com Docker, você pode comentar estas
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role

# Database (PostgreSQL Local via Docker)
# Esta URL conecta ao PostgreSQL do docker-compose
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prova_facil

# Google AI (Genkit)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# PostgreSQL Local via Docker
# These credentials match the docker-compose.yml setup
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_db

# Signup redirect URL
NEXT_PUBLIC_SIGNUP_REDIRECT_URL=http://localhost:3000/dashboard

# ========================================
# STRIPE CONFIGURATION
# ========================================
STRIPE_SECRET_KEY=sk_test_your_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product IDs
STRIPE_PRODUCT_STARTER=prod_your_starter_product_id
STRIPE_PRODUCT_STARTER_PRICE_ID_MONTHLY=prod_your_starter_monthly_price_id
STRIPE_PRODUCT_BASIC=prod_your_basic_product_id
STRIPE_PRODUCT_BASIC_PRICE_ID_MONTHLY=prod_your_basic_monthly_price_id
STRIPE_PRODUCT_BASIC_PRICE_ID_ANNUAL=prod_your_basic_annual_price_id
STRIPE_PRODUCT_ESSENTIALS=prod_your_essentials_product_id
STRIPE_PRODUCT_ESSENTIALS_PRICE_ID_MONTHLY=prod_your_essentials_monthly_price_id
STRIPE_PRODUCT_ESSENTIALS_PRICE_ID_ANNUAL=prod_your_essentials_annual_price_id
STRIPE_PRODUCT_PLUS=prod_your_plus_product_id
STRIPE_PRODUCT_PLUS_PRICE_ID_MONTHLY=prod_your_plus_monthly_price_id
STRIPE_PRODUCT_PLUS_PRICE_ID_ANNUAL=prod_your_plus_annual_price_id
STRIPE_PRODUCT_ADVANCED=prod_your_advanced_product_id
STRIPE_PRODUCT_ADVANCED_PRICE_ID_MONTHLY=prod_your_advanced_monthly_price_id
STRIPE_PRODUCT_ADVANCED_PRICE_ID_ANNUAL=prod_your_advanced_annual_price_id

# ========================================
# REDIS CONFIGURATION (Local via Docker)
# ========================================
# Esta URL conecta ao Redis do docker-compose
REDIS_URL=redis://localhost:6379

# Ou use configurações individuais:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
