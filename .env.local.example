# ========================================
# CONFIGURAÇÃO LOCAL COM DOCKER COMPOSE
# ========================================
# Este arquivo contém as variáveis para usar com o docker-compose.yml
# Copie para .env.local e ajuste se necessário

# Supabase (se usar Supabase, mantenha suas credenciais)
# Para desenvolvimento local com Docker, você pode comentar estas
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database (PostgreSQL Local via Docker)
# Esta URL conecta ao PostgreSQL do docker-compose
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prova_facil

# Google AI (Genkit)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Signup redirect URL
NEXT_PUBLIC_SIGNUP_REDIRECT_URL=http://localhost:3000/dashboard

# ========================================
# STRIPE CONFIGURATION
# ========================================
STRIPE_SECRET_KEY=sk_test_your_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product IDs
STRIPE_PRODUCT_STARTER=prod_starter
STRIPE_PRODUCT_BASIC=prod_basic
STRIPE_PRODUCT_BASIC_PRICE_ID_MONTHLY=price_basic_monthly
STRIPE_PRODUCT_BASIC_PRICE_ID_ANNUAL=price_basic_annual
STRIPE_PRODUCT_ESSENTIALS=prod_essentials
STRIPE_PRODUCT_ESSENTIALS_PRICE_ID_MONTHLY=price_essentials_monthly
STRIPE_PRODUCT_ESSENTIALS_PRICE_ID_ANNUAL=price_essentials_annual
STRIPE_PRODUCT_PLUS=prod_plus
STRIPE_PRODUCT_PLUS_PRICE_ID_MONTHLY=price_plus_monthly
STRIPE_PRODUCT_PLUS_PRICE_ID_ANNUAL=price_plus_annual
STRIPE_PRODUCT_ADVANCED=prod_advanced
STRIPE_PRODUCT_ADVANCED_PRICE_ID_MONTHLY=price_advanced_monthly
STRIPE_PRODUCT_ADVANCED_PRICE_ID_ANNUAL=price_advanced_annual

# ========================================
# REDIS CONFIGURATION (Local via Docker)
# ========================================
# Esta URL conecta ao Redis do docker-compose
REDIS_URL=redis://localhost:6379

# Ou use configurações individuais:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
